@model IEnumerable<Portfolio.Models.Logs>

@{
    ViewData["Title"] = "Index";
}
@if(Model!=null && Model.Count()>0){
<h1 class="text-center">LOGS</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bank_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ROI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Investment_Start_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Maturity_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Investment_Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Maturity_Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Action)
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Bank_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ROI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Investment_Start_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Maturity_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Investment_Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Maturity_Amount)
            </td>
            <td>
                        @if (item.Action == "Deleted")
                        {
                            <a class="btn btn-primary" asp-controller="Investment" asp-action="Restore" asp-route-id="@item.Id">Restore</a>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.Action)
                        }
                        |
                        <a class="btn btn-danger delete" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        
            </td>
            

        </tr>
}
    </tbody>
</table>
}else{
    <h1 class="text-center" style="color:red">NO RECORDS</h1>
}